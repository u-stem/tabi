{
  "name": "@sugara/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "test": "vitest run --passWithNoTests --exclude 'src/__tests__/integration/**'",
    "test:integration": "TEST_DATABASE_URL=postgresql://sugara:sugara@localhost:5432/sugara_test vitest run --fileParallelism=false src/__tests__/integration/",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "check": "biome check --write src/",
    "check-types": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/db/seed.ts"
  },
  "dependencies": {
    "@sugara/shared": "workspace:*",
    "better-auth": "^1.4.18",
    "drizzle-orm": "^0.45.1",
    "hono": "^4",
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5",
    "vitest": "^3"
  }
}
