{
  "name": "sugara",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "lint": "turbo lint",
    "format": "turbo format",
    "check": "turbo check",
    "check-types": "turbo check-types",
    "db:generate": "bun run --filter @sugara/api db:generate",
    "db:migrate": "bun run --filter @sugara/api db:migrate",
    "db:push": "bun run --filter @sugara/api db:push",
    "db:studio": "bun run --filter @sugara/api db:studio",
    "db:seed": "bun run --filter @sugara/api db:seed",
    "db:seed-user": "bun run --filter @sugara/api db:seed-user",
    "postinstall": "command -v git >/dev/null 2>&1 && lefthook install || true"
  },
  "packageManager": "bun@1.3.2",
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "lefthook": "^2.1.1",
    "turbo": "^2.8.9"
  }
}
